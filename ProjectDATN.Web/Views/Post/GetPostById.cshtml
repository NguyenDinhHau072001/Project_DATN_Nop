@using ProjectDATN.Web.ViewComponents;
@model ProjectDATN.Data.Entities.Post
@{
    ViewData["Title"] = "GetPostById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-3">

                <div class="aside">
                    <h3 class="aside-title">Danh sách bài viết</h3>
                    <div class="checkbox-filter">
                        <div class="input-checkbox">
                            @await Component.InvokeAsync(typeof(PostViewComponent),new{name="Post"})
                        </div>
                        <div class="input-checkbox">
                        </div>
                    </div>
                </div>

            </div>
            <!-- /ASIDE -->
            <!-- STORE -->
            <div id="store" class="col-md-9">

                <div class="row">

                    <!-- product -->
                    <div style="margin-bottom:20px">
                        <div class="product">

                            <div class="product-body">
                                @*<p class="product-category">@item.CateName</p>*@
                                <h3 class="product-name"><a href="#">@Model.Name</a></h3>
                                @Html.Raw(Model.Content)

                            </div>

                        </div>
                    </div>

                </div>

            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
