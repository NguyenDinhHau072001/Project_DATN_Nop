@model IEnumerable<CartItem>
@{

}
@foreach (var item in Model)
{
    <div class="form-group">
        <div class="col-sm-3 col-xs-3">
            <img class="img-responsive" src="~/uploads/images/product/@item.Image" />
        </div>
        <div class="col-sm-6 col-xs-6">
            <div class="col-xs-12">@item.ProductName</div>
            <div class="col-xs-12"><small>Số lượng : &nbsp;&nbsp;<span>@item.Quantity</span></small></div>
        </div>
        <div class="col-sm-3 col-xs-3 text-right">
            <h6>@item.PriceTotal.ToString("#,##0") VND</h6>
        </div>
    </div>
    
                       
}
<div class="form-group"><hr /></div>
<div class="form-group">
    <div class="col-xs-12">
        <strong>Tổng tiền:</strong>
        <div class="pull-right">@Model.Sum(x=>x.PriceTotal).ToString("#,##0") VND</div>
    </div>
