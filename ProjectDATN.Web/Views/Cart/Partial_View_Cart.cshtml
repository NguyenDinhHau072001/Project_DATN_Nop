@model IEnumerable<CartItem>
@{
    
}
<table class="table">
    <tr>
        <th>Ảnh</th>
        <th>Ten san pham</th>
        <th>So luong</th>
        <th>Gia</th>
        <th></th>
        <th></th>
    </tr>
    @if(Model != null)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/uploads/images/product/@item.Image" width="100px" /></td>
                <td>@item.ProductName</td>
                <td>

                    <input type="number"  min="1" max="@item.MaxQuantity" style="width:60px;text-align:center" id="Quantity-@item.ProductId" value="@item.Quantity" />

                </td>
                <td id="totalPrice-@item.ProductId">@item.PriceTotal.ToString("#,##0") VND</td>
                <td>
                    <a href="#" class="btn btn-success " id="updateQuantity" data-id="@item.ProductId">
                        Cập nhật
                    </a>
                </td>

                <td><a href="#" data-id="@item.ProductId" class="Removecart" style="font-size:20px;color:red"><i class="fa-solid fa-trash"></i></a></td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Không có sản phẩm nào trong giỏ hàng!!!!</td>
        </tr>
    }

</table>