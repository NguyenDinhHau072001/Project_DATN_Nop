@model ProjectDATN.Data.Entities.Post
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Tạo bài viết mới</h1>

<div>
    <form asp-action="Create" asp-controller="New" asp-area="Admin">
        <div class="form-group">    
            <label asp-for="Name" class="control-label">Tên bài viết</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label">Nhập nội dung bài viết</label>
            <textarea class="form-control" asp-for="Content"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Lưu lại" class="btn btn-success" />
        </div>
    </form>
    <div class="form-control">
        <a asp-action="Index" asp-controller="New" asp-area="Admin">Quay lại danh sách bài viết</a>
    </div>
</div>



