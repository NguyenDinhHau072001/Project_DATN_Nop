@model IEnumerable<ProjectDATN.Data.Entities.Post> 
@{
   
}

<h1>Danh sách các bài viết</h1>
<a class="btn btn-sm btn-primary" asp-action="Create" asp-area="Admin" asp-controller="New">Tạo mới bài viết</a>
<div>
    <table class="table">
        <tr>
            <th></th>
            <th>Tên bài viết</th>
            <th ></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Edit" asp-controller="New" asp-area="Admin" asp-route-id="@item.Id">Sửa lại</a>
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-controller="New" asp-area="Admin" asp-route-id="@item.Id">Chi tiết</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="@("#DeletePost-" + item.Id)" data-url="@Url.Action($"Delete/{item.Id}")" style="height:30px;line-height:0px">Xóa</button>
                    @await Html.PartialAsync("DeletePost",item)
                </td>
            </tr>
        }
    </table>


</div>
